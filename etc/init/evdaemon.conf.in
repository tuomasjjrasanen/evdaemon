description "@PACKAGE_DESCRIPTION@"
author "@PACKAGE_AUTHOR@"
version "@VERSION@"

script /usr/local/bin/evdaemon
  EVDEV1=`find /dev/input/by-path/ -regex .*-event-kbd* | tail -n1 | xargs readlink -e`
  EVDEV2=`find /dev/input/by-path/ -regex .*-event-mouse* | tail -n1 | xargs readlink -e`
  exec /usr/local/bin/evdaemon $EVDEV1 $EVDEV2
end script

umask 0
kill timeout 2
expect daemon
