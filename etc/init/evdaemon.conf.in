description "@PACKAGE_DESCRIPTION@"
author "@PACKAGE_AUTHOR@"
version "@VERSION@"

start on runlevel [2345]
stop on runlevel [!2345]

expect daemon     
respawn

umask 0
kill timeout 5

exec evdaemon `find /dev/input/by-path/ -regex .*-event-kbd* | tail -n1 | xargs readlink -e` `find /dev/input/by-path/ -regex .*-event-mouse* | tail -n1 | xargs readlink -e`
